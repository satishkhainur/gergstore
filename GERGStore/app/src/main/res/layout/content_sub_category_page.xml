<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.appsriv01.gergstore.SubCategoryPage"
    tools:showIn="@layout/activity_sub_category_page">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="#fff">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/subcategory"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 % off"
                    android:textSize="35sp"
                    android:layout_gravity="end"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/holo_blue_light"
                    android:text="SHOP NOW"/>


            </LinearLayout>

        </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="05">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Fashion Store >> Women'sWear >>FootWear"
        android:textSize="10sp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="2dp"
        android:src="@drawable/image"/>

</LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="85">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:rowCount="7"
                    android:columnCount="4" >
                    <ImageView
                        android:id="@+id/imagesub"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:src="@drawable/image50"
                        android:typeface="serif"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="start"
                        android:layout_columnSpan="2"
                        android:textSize="20dip"  />
                   <!-- <Space
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_width="50dp"
                        android:layout_height="10dp" />-->
                    <TextView
                        android:text="  Product Name:"
                        android:layout_row="1"
                        android:layout_column="0" />

                    <TextView
                        android:layout_row="2"
                        android:layout_column="0"
                        android:text="  Women'sWear"/>
                    <TextView
                        android:layout_row="3"
                        android:layout_column="0"
                        android:text="        Rs  647"/>

<View android:layout_width="20dp"
    android:layout_height="match_parent"/>
                    //2
                    <ImageView
                        android:layout_row="0"
                        android:layout_column="1"
                        android:src="@drawable/image50"
                        android:typeface="serif"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="start"
                        android:layout_columnSpan="2"
                        android:textSize="20dip"  />
                    <!-- <Space
                         android:layout_row="1"
                         android:layout_column="0"
                         android:layout_width="50dp"
                         android:layout_height="10dp" />-->
                    <TextView
                        android:text="  Product Name:"
                        android:layout_row="1"
                        android:layout_column="1" />

                    <TextView
                        android:layout_row="2"
                        android:layout_column="1"
                        android:text="  Women'sWear"/>
                    <TextView
                        android:layout_row="3"
                        android:layout_column="1"
                        android:text="        Rs  647"/>

                    //3

                    <ImageView
                        android:layout_row="0"
                        android:layout_column="2"
                        android:src="@drawable/image50"
                        android:typeface="serif"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="start"
                        android:layout_columnSpan="2"
                        android:textSize="20dip"  />
                    <!-- <Space
                         android:layout_row="1"
                         android:layout_column="0"
                         android:layout_width="50dp"
                         android:layout_height="10dp" />-->
                    <TextView
                        android:text="  Product Name:"
                        android:layout_row="1"
                        android:layout_column="2" />

                    <TextView
                        android:layout_row="2"
                        android:layout_column="2"
                        android:text="  Women'sWear"/>
                    <TextView
                        android:layout_row="3"
                        android:layout_column="2"
                        android:text="        Rs  647"/>



                </GridLayout>



            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
